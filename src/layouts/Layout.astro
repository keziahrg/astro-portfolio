---
import '@/styles/fonts.css'
import '@/styles/reset.css'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import Seo from '@/components/Seo'
import type { SeoProps } from '@/components/Seo'

export interface Props {
  seoData: SeoProps
}

const { seoData } = Astro.props as Props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <link
      rel='preload'
      href='./fonts/national-regular.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      href='./fonts/national-medium.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      href='./fonts/newzald-bold.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <Seo {...seoData} />
  </head>
  <body>
    <Header />
    <main>
      <slot></slot>
    </main>
    <Footer />
  </body>
</html>
